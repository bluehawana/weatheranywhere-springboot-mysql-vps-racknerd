# ==============================
# OpenAI API Configuration
# ==============================
server.port=8081
openai.api.key=YOUR_OPENAI_API_KEY_HERE

# ==============================
# OpenCage Geocoding API Configuration
# ==============================
opencage.api.key=YOUR_OPENCAGE_API_KEY_HERE

# ==============================
# Database Configuration (Local MySQL)
# ==============================
spring.datasource.url=jdbc:mysql://localhost:3306/weatheranywhere?useSSL=false&allowPublicKeyRetrieval=true
spring.datasource.username=root
spring.datasource.password=YOUR_DATABASE_PASSWORD_HERE
spring.datasource.driver-class-name=com.mysql.cj.jdbc.Driver

# ==============================
# JPA & Hibernate Configuration
# ==============================
spring.jpa.database-platform=org.hibernate.dialect.MySQL8Dialect
spring.jpa.hibernate.ddl-auto=update
spring.jpa.show-sql=true
# ==============================
# SQL Initialization
# ==============================
spring.sql.init.mode=always

# ==============================
# H2 Console (disabled for MySQL)
# ==============================
spring.h2.console.enabled=false
